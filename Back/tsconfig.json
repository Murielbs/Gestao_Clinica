{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "Back/dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["Back/node_modules", "Back/dist"]
}
